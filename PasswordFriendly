package passwordprotection;

import java.util.Scanner;
public class PassManager {
public static void main(String[] args) {
	final double DYR = 100;
	Scanner input = new Scanner (System.in);
	Scanner input2 = new Scanner (System.in);
System.out.println("Welcome to your Finance Manager");
System.out.println("Do you currently have a safe investment? ");
System.out.println("What is the value of your share: ");
int shareprice = input.nextInt();
System.out.println("What is the dividend for each share: ");
double dividend = input2.nextDouble();
double yieldratio = dividend / shareprice * DYR;
System.out.println("The Dividend Yield Ratio is: " + Math.floor(yieldratio) + "%");
//Run calculations
if (yieldratio > 15.00 ) {
	System.out.println("Your investment seems to be in good hands");;
} else { 
	System.out.println("Reconsider your investment if the company isn't well-estblished");
}
System.out.println("The next steps in your financial success depend on where YOUR money is going.");
Scanner balance = new Scanner (System.in);
System.out.println("Do you have any monthly subscriptions? ");
double[] code = new double[2];
double[] weekincome = new double[2];
String[] sub1 = new String[2];
String[] sub2 = new String[2];
String[] sub3 = new String[2];
String[] sub4 = new String[2];

for (int j = 0; j < code.length - 1; j++)
{
	System.out.println("Enter your current account(s) balance: ");
	code[j]=balance.nextDouble();
	System.out.println("Weekly paycheck: ");
	weekincome[j] = balance.nextDouble();
	System.out.println("Subscription 1 name and monthly cost: ");
	sub1[j] = balance.next();
	System.out.println("Subscription 2 name and monthly cost: ");
	sub2[j] = balance.next();
	System.out.println("Subscription 3 name and monthly cost: ");
	sub3[j] = balance.next();
	System.out.println("Subscription 4 name and monthly cost: ");
	sub4[j] = balance.next();

}
System.out.println("Enter your monthly income again: ");

//while loop is used here for continuation or termination
 

if(weekincome[0] >= 250)
System.out.println("With your account balance being: $" + code[0] + ", and your weekly income being $\n" + weekincome[0] 
		+ ", your subscriptions, \n" + sub1[0] + "\n" + sub2[0] + "\n"  + sub3[0] + "\n" + sub4[0] + "\naren't too hefty on your finances.");
else if (weekincome[0] <= 249)
System.out.println("With your account balance being: $" + code[0] + ", and your weekly income being $\n" + weekincome[0] 
		+ ", your subscriptions, \n" + sub1[0] + "\n" + sub2[0] + "\n"  + sub3[0] + "\n" + sub4[0] + "\nhave some significance on your finances.");
else  
System.out.println("With your account balance being: $" + code[0] + ", and your weekly income being $\n" + weekincome[0] 
		+ ", your subscriptions, \n" + sub1[0] + "\n" + sub2[0] + "\n"  + sub3[0] + "\n" + sub4[0] + "\nare hurting your finances.");

}


}
